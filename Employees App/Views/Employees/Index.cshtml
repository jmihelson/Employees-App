@model List<Employees_App.Models.Domain.Employee>

@{
}

<h1>Employees</h1>

<table class="table">
    <thead>
        <tr>Id</tr>
        <tr>Name</tr>
        <tr>Email</tr>
        <tr>Salary</tr>
        <tr>Date Of Birth</tr>
        <tr>Department</tr>
        <tr> </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                <td>@employee.Department</td>
                <td><a href="Employees/View/@employee.Id">View</a></td>
            </tr>
        }
    </tbody>

</table>